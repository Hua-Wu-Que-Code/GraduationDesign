<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.springboot.mapper.CureOrderMapper">

    <resultMap type="com.example.springboot.entity.Cureorder" id="CureorderMap">
        <result property="id" column="id" jdbcType="VARCHAR"/>
        <result property="doctorid" column="doctorId" jdbcType="VARCHAR"/>
        <result property="userid" column="userId" jdbcType="VARCHAR"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="des" column="des" jdbcType="VARCHAR"/>
        <result property="date" column="date" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="CureorderMap">
        select
          id, doctorId, userId, name, des, date
        from CureOrder
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="CureorderMap">
        select
          id, doctorId, userId, name, des, date
        from CureOrder
        <where>
            <if test="id != null and id != ''">
                and id = #{id}
            </if>
            <if test="doctorid != null and doctorid != ''">
                and doctorId = #{doctorid}
            </if>
            <if test="userid != null and userid != ''">
                and userId = #{userid}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="des != null and des != ''">
                and des = #{des}
            </if>
            <if test="date != null">
                and date = #{date}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from CureOrder
        <where>
            <if test="id != null and id != ''">
                and id = #{id}
            </if>
            <if test="doctorid != null and doctorid != ''">
                and doctorId = #{doctorid}
            </if>
            <if test="userid != null and userid != ''">
                and userId = #{userid}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="des != null and des != ''">
                and des = #{des}
            </if>
            <if test="date != null">
                and date = #{date}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into CureOrder(id,doctorId, userId, name, des, date)
        values (#{id},#{doctorid}, #{userid}, #{name}, #{des}, #{date})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into CureOrder(doctorId, userId, name, des, date)
        values
        <foreach collection="entities" item="entity" separator=",">
        (#{entity.doctorid}, #{entity.userid}, #{entity.name}, #{entity.des}, #{entity.date})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into CureOrder(doctorId, userId, name, des, date)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.doctorid}, #{entity.userid}, #{entity.name}, #{entity.des}, #{entity.date})
        </foreach>
        on duplicate key update
        doctorId = values(doctorId),
        userId = values(userId),
        name = values(name),
        des = values(des),
        date = values(date)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update CureOrder
        <set>
            <if test="doctorid != null and doctorid != ''">
                doctorId = #{doctorid},
            </if>
            <if test="userid != null and userid != ''">
                userId = #{userid},
            </if>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="des != null and des != ''">
                des = #{des},
            </if>
            <if test="date != null">
                date = #{date},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from CureOrder where id = #{id}
    </delete>

</mapper>

